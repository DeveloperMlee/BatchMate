<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krudo.batchmate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BatchMate"
        android:usesCleartextTraffic="true">
        <activity android:name=".JoinClass"></activity>
        <activity android:name=".PaymentActivity"></activity>
        <activity android:name=".OverviewActivity"></activity>
        <activity android:name=".CenterMainActivity">
        </activity>
        <activity
            android:name=".SignUp"
            android:noHistory="true" />
        <activity
            android:name=".Login"
            android:noHistory="true" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>